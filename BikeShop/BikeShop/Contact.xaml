<Page x:Class="BikeShop.Contact"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BikeShop"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Contact"
      Background="{StaticResource background}">

    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Sender" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="66,9,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="229" MouseDoubleClick="Control_OnMouseDoubleClick"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,47,0,0" TextWrapping="Wrap" Text="Message" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="254" Margin="66,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="229"/>
    </Grid>
</Page>
